<script>
const coupons = [
  { text: "10-minute voice note rant ğŸ§", redeem: "Heyyy ğŸ’– I just scratched a coupon â€” can I rant for 10 minutes? ğŸ¥¹" },
  { text: "Miss-you paragraph ğŸ’•", redeem: "I won a miss-you paragraph ğŸ¥¹ Iâ€™m waiting ğŸ’•" },
  { text: "Unlimited reassurance (1 day) ğŸ¤", redeem: "Redeeming my reassurance pass ğŸ¤ please donâ€™t stop reassuring me today ğŸ¥º" },
  { text: "You choose my profile pic ğŸ“¸", redeem: "Profile pic privilege activated ğŸ“¸ğŸ˜Œ send me options" }
];

const canvas = document.getElementById('scratch');
const ctx = canvas.getContext('2d');
const prizeEl = document.getElementById('prize');
const redeemBtn = document.getElementById('redeem');
const nextBtn = document.getElementById('next');
const heartsStage = document.getElementById('heartsStage');
const wrapper = document.getElementById('wrapper');
const scene = document.getElementById('scene');
const sceneContent = document.getElementById('sceneContent');
const sceneText = document.getElementById('sceneText');
const sceneBack = document.getElementById('sceneBack');

let scratching = false, revealed = false, currentCoupon;

function resize() { canvas.width = canvas.offsetWidth; canvas.height = canvas.offsetHeight; }
function pick() { currentCoupon = coupons[Math.floor(Math.random()*coupons.length)]; prizeEl.textContent = currentCoupon.text; }
function cover() { ctx.fillStyle='#c0c0c0'; ctx.fillRect(0,0,canvas.width,canvas.height); ctx.fillStyle='#777'; ctx.font='16px Poppins'; ctx.textAlign='center'; ctx.fillText('Scratch here âœ¨',canvas.width/2,canvas.height/2+6); }
function scratch(x,y){ if(revealed) return; ctx.globalCompositeOperation='destination-out'; ctx.beginPath(); ctx.arc(x,y,18,0,Math.PI*2); ctx.fill(); check(); }
function check(){ const img=ctx.getImageData(0,0,canvas.width,canvas.height); let cleared=0; for(let i=3;i<img.data.length;i+=4) if(img.data[i]===0) cleared++; if(cleared/(canvas.width*canvas.height)*100>40) reveal(); }

function reveal(){
  revealed=true;
  redeemBtn.style.display='inline-block';
  nextBtn.style.display='inline-block';
}

redeemBtn.onclick = ()=>{
  const text = encodeURIComponent(currentCoupon.redeem);
  window.open(`https://wa.me/?text=${text}`, '_blank');
};

nextBtn.onclick = () => {
  redeemBtn.style.display = 'none';
  nextBtn.style.display = 'none';
  wrapper.style.display = 'none';
  heartsStage.style.display = 'block';
};

document.querySelectorAll('.big-heart').forEach(h => {
  h.onclick = () => {
    const id = h.dataset.heart;
    heartsStage.style.display = 'none';
    scene.style.display = 'flex';
    sceneContent.innerHTML = '';

    if (id === '1') {
      sceneContent.innerHTML = '<img src="https://media4.giphy.com/media/v1.Y2lkPTc5MGI3NjExd3J3cnZ3eDZhdXB2b3M2YnlkbWlhbTJvcjhjaHpyeHI5MGpld3BnZCZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9Zw/NxC8VtyxqhMtpLoEEN/giphy.gif" class="scene-gif" alt="Teddy Bear" />';
      sceneText.textContent = 'A soft teddy sending warm hugs!';
    } else if (id === '2') {
      sceneContent.innerHTML = '<img src="https://media1.tenor.com/m/N6YkKkon-vsAAAAC/heart-heart-dance.gif" class="scene-gif" alt="Dancing Heart" />';
      sceneText.textContent = 'This heart is dancing just for you!';
    } else if (id === '3') {
      sceneContent.innerHTML = '<img src="https://media1.tenor.com/m/yabEZhxPfGcAAAAC/timm.gif" class="scene-gif" alt="Flying Kisses" />';
      sceneText.textContent = 'Sending you gentle flying kisses!';
    }
  };
});

sceneBack.onclick = () => {
  scene.style.display = 'none';
  heartsStage.style.display = 'block';
};

canvas.onmousedown = () => scratching = true;
canvas.onmouseup = () => scratching = false;
canvas.onmousemove = e => scratching && scratch(e.offsetX, e.offsetY);
canvas.ontouchstart = () => scratching = true;
canvas.ontouchend = () => scratching = false;
canvas.ontouchmove = e => { e.preventDefault(); const r = canvas.getBoundingClientRect(); scratch(e.touches[0].clientX-r.left, e.touches[0].clientY-r.top); };

resize(); pick(); cover();
</script>
